   std.log( "CACHE-DEBUG URL:"+req.url+" COOKIE:"+req.http.Cookie+" AVISO:HIT IP:"+client.ip);
   if (req.request == "PURGE") {
      purge;
      error 200 "Purged.";
   }
}

