if (<%= @condition -%>) {
    <%- if @movedto -%>
  error 750 "<%= @movedto -%>" + req.url;  
    <%- else -%>
  set req.backend = <%= @director -%>;
      <%- if @rewrite -%>
  set req.http.x-host = <%= @rewrite -%>;
      <%- end -%>
      <%- if @newurl -%>
  set req.url = <%= @newurl -%>;
      <%- end -%>
    <%- end -%>
}
